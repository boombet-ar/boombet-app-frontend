<manifest xmlns:android="http://schemas.android.com/apk/res/android">
    <uses-permission android:name="android.permission.INTERNET"/>
    <application android:label="BoomBet" android:name="${applicationName}" android:icon="@mipmap/ic_launcher">
        <activity android:name=".MainActivity" android:exported="true" android:launchMode="singleTop" android:theme="@style/LaunchTheme" android:configChanges="orientation|keyboardHidden|keyboard|screenSize|smallestScreenSize|locale|layoutDirection|fontScale|screenLayout|density|uiMode" android:hardwareAccelerated="true" android:windowSoftInputMode="adjustResize">
            <!-- Flutter theme -->
            <meta-data android:name="io.flutter.embedding.android.NormalTheme" android:resource="@style/NormalTheme" />

            <!-- Launcher -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>

            <!-- ðŸ”¥ CONFIRM EMAIL - HTTP Links (desde el email) -->
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>
                <data android:scheme="https" android:host="example.com" android:pathPrefix="/confirm"/>
                <data android:scheme="http" android:host="192.168.0.8" android:pathPrefix="/confirm"/>
                <data android:scheme="http" android:host="10.0.2.2" android:pathPrefix="/confirm"/>
            </intent-filter>

            <!-- ðŸ”¥ CONFIRM EMAIL - Esquema boombet -->
            <intent-filter android:autoVerify="false">
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>
                <data android:scheme="boombet" android:host="confirm"/>
            </intent-filter>

            <!-- ðŸ”¥ RESET PASSWORD - HTTP Links (desde el email) -->
            <intent-filter android:autoVerify="false">
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>
                <data android:scheme="https" android:host="example.com" android:pathPrefix="/reset-password"/>
                <data android:scheme="http" android:host="192.168.0.8" android:pathPrefix="/reset-password"/>
                <data android:scheme="http" android:host="10.0.2.2" android:pathPrefix="/reset-password"/>
            </intent-filter>

            <!-- ðŸ”¥ RESET PASSWORD - Custom Scheme boombet:// -->
            <intent-filter android:autoVerify="false">
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>
                <data android:scheme="boombet" android:host="reset-password"/>
            </intent-filter>
        </activity>
        <meta-data android:name="flutterEmbedding" android:value="2" />
    </application>
</manifest>